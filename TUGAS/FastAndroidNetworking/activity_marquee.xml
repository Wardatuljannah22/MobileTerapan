<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/EditMarquee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cg"
    android:orientation="vertical"
    tools:context=".marquee">


    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_span="2"
        android:gravity="center"
        android:text="Marquee"
        android:textColor="#890000"
        android:textSize="25sp"
        android:textStyle="bold" />


    <androidx.cardview.widget.CardView
        android:layout_width="372dp"
        android:layout_height="120dp"
        android:layout_columnWeight="1"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="18dp"
        android:background="#3333"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/cherry_cream_soda"
                    android:gravity="left"
                    android:text="Isi Marquee  :"
                    android:textColor="#000000"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:id="@+id/isi_marquee"
                    android:layout_width="188dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dip"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="20dp"></TextView>
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_span="2"
        android:text=" Update Marquee"
        android:textColor="#890000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="372dp"
        android:layout_height="120dp"
        android:layout_columnWeight="1"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="18dp"
        android:background="#3333"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/cherry_cream_soda"
                    android:gravity="left"
                    android:text="Isi Marquee  :"
                    android:textColor="#000000"
                    android:textSize="20dp"></TextView>

                <EditText
                    android:id="@+id/editTextMarquee"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dip"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="20dp"></EditText>
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp">


        <Button
            android:id="@+id/btnUpMar"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="40dp"
            android:background="#3333"
            android:fontFamily="@font/cherry_cream_soda"
            android:text=" Update"
            android:textColor="#890000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/butKembaliMar"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:background="#3333"
            android:fontFamily="@font/cherry_cream_soda"
            android:text=" Back"
            android:textColor="#890000"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>



</LinearLayout>