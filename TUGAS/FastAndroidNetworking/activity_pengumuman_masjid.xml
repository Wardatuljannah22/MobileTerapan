<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cg"
    android:orientation="vertical"
    tools:context=".pengumuman_masjid">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="292dp"
        android:layout_height="38dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/cherry_cream_soda"
        android:gravity="center"
        android:textColor="#890000"
        android:text="Pengumuman Masjid"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:layout_width="372dp"
        android:layout_height="150dp"
        android:layout_columnWeight="1"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="18dp"
        android:background="#3333"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/cherry_cream_soda"
                    android:gravity="left"
                    android:text="Judul  :"
                    android:textColor="#000000"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:id="@+id/nama_masjid"
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dip"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="20dp"></TextView>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp">

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/cherry_cream_soda"
                    android:gravity="left"
                    android:text="Isi       :"
                    android:textColor="#000000"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:id="@+id/isi_pengumuman"
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dip"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="20dp"></TextView>
            </TableRow>
        </TableLayout>

    </androidx.cardview.widget.CardView>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_span="2"
        android:text=" Update Pengumuman Masjid"
        android:textColor="#890000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="372dp"
        android:layout_height="150dp"
        android:layout_columnWeight="1"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="18dp"
        android:background="#3333"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/cherry_cream_soda"
                    android:gravity="left"
                    android:text="Judul   :"
                    android:textColor="#000000"
                    android:textSize="20dp"></TextView>

                <EditText
                    android:id="@+id/EditJudul"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dip"
                    android:gravity="center"
                    android:layout_marginRight="20dip"
                    android:textColor="#000000"
                    android:textSize="20dp"></EditText>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp">

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/cherry_cream_soda"
                    android:gravity="left"
                    android:text="Isi        :"
                    android:textColor="#000000"
                    android:textSize="20dp"></TextView>

                <EditText
                    android:id="@+id/EditPengmas"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dip"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="20dp"></EditText>
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp">


        <Button
            android:id="@+id/BtnUpdatePeng"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="40dp"
            android:background="#3333"
            android:fontFamily="@font/cherry_cream_soda"
            android:text=" Update"
            android:textColor="#890000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnkembalipeng"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:background="#3333"
            android:fontFamily="@font/cherry_cream_soda"
            android:text=" Back"
            android:textColor="#890000"
            android:textSize="25sp"
            android:textStyle="bold" />



    </LinearLayout>


</LinearLayout>