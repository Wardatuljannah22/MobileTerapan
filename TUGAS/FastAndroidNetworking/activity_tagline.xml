<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cg"
    tools:context=".tagline">

    <TextView
        android:id="@+id/tagline"
        android:layout_width="168dp"
        android:layout_height="44dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/cherry_cream_soda"
        android:gravity="center"
        android:text="TagLine"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/isi_tagline"
        android:layout_width="366dp"
        android:layout_height="46dp"
        android:layout_marginTop="104dp"
        android:fontFamily="@font/cherry_cream_soda"
        android:hint="Tagline"

        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagline" />

    <EditText
        android:id="@+id/EditTagline"
        android:layout_width="358dp"
        android:layout_height="43dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isi_tagline" />

    <Button
        android:id="@+id/btnkembaliTag"
        android:layout_width="151dp"
        android:layout_height="43dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="#3333"
        android:fontFamily="@font/cherry_cream_soda"
        android:text="Back"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnUpdateTag"
        android:layout_width="151dp"
        android:layout_height="43dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="412dp"
        android:background="#3333"
        android:fontFamily="@font/cherry_cream_soda"
        android:text="Update"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/btnkembaliTag"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>